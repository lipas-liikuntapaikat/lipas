#kaocha/v1
 {:tests [{:id :unit
           :test-paths ["test/clj"]
           :source-paths ["src/clj" "src/cljc"]
           :ns-patterns ["-test$"]}]

 ;; capture-output is enabled by default - captures stdout/stderr
 ;; and only shows it when tests FAIL
  :capture-output? true

 ;; Custom reporter: namespace names + dots for each test
 ;; Options: kaocha.report/documentation, kaocha.report/dots, lipas.kaocha-reporter/docs-and-dots
  :reporter lipas.kaocha-reporter/docs-and-dots

 ;; Randomize test order to catch order-dependent bugs
  :randomize? true

 ;; Color output
  :color? true}
